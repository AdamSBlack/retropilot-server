{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "es6": true,
    "browser": false
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-var": [
      "off"
    ],
    "one-var": [
      "off"
    ]
  }
}
